{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "lib": ["ES2017", "ES2018", "ES2019"],
    "strictNullChecks": true,
    "strict": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  }
}
